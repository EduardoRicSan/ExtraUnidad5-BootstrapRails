<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>


<table class="table">
  <thead>
    <tr class="success">
      <th>Nombre</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user , :class => 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, :class => 'btn btn-warning', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => 'btn btn-primary' %>
